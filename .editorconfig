root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{json,yml,yaml,xml,ini,toml}]
indent_size = 2

[*.{c,cpp,h,hpp,java,go}]
indent_size = 4

[*.{js,jsx,ts,tsx,html,css,scss}]
indent_size = 2

[*.py]
indent_size = 4

[*.rs]
indent_size = 4

[*.{sh,zsh,fish}]
indent_size = 2
